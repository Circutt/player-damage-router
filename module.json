{
  "id": "player-damage-router",
  "type": "module",
  "title": "Player Damage Router (PF2e)",
  "description": "Replaces PF2e damage/heal buttons with identical PDR buttons that route to the GM via SocketLib. Supports multi-row cards (main/splash/persistent) and healing.",
  "version": "2.0.0",

  "authors": [{ "name": "Circutt" }],
  "license": "MIT",

  "compatibility": { "minimum": "10", "verified": "13" },
  "systems": ["pf2e"],

  "esmodules": ["scripts/main.js"],

  "socket": true,                     

  "relationships": {
    "requires": [
      {
        "id": "socketlib",
        "type": "module",
        "manifest": "https://github.com/farling42/foundryvtt-socketlib/releases/latest/download/module.json"
      }
    ]
  },

  "url": "https://github.com/Circutt/player-damage-router",
  "readme": "https://github.com/Circutt/player-damage-router#readme",
  "bugs": "https://github.com/Circutt/player-damage-router/issues",
  "changelog": "https://github.com/Circutt/player-damage-router/releases",

  "manifest": "https://raw.githubusercontent.com/Circutt/player-damage-router/main/module.json",
  "download": "https://github.com/Circutt/player-damage-router/releases/download/2.0.0/player-damage-router-2.0.0.zip"
}
